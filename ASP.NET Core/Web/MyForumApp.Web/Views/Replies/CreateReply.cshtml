@using System.Linq
@model MyForumApp.Web.ViewModels.Replies.CreateReplyViewModel
@{
    this.ViewData["Title"] = "Reply";
}
<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form asp-controller="Replies" asp-action="CreateReply" method="post">

    <input asp-for="@Model.CommentId" type="hidden" class="text-danger" />
    <input asp-for="@Model.PostId" type="hidden" class="text-danger" />
    <div>
        <label asp-for="@Model.Content"></label>
        <textarea asp-for="@Model.Content" class="form-control"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>

    <hr />
    <input type="submit" class="btn btn-primary" />
</form>