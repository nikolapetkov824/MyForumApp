@model MyForumApp.Web.ViewModels.Comments.CommentViewModel
@{
    this.ViewData["Title"] = "Latest Comments";
}

<!--COMMENT SECTION-->
<div class="row d-flex justify-content-center mt-100">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body text-center">
                <h4 class="card-title">@this.ViewData["Title"]</h4>
            </div>

            @foreach (var comment in Model.Comments)
            {
                <div class="d-flex flex-row comment-row m-t-0">
                    <h4 class="media-heading"><a asp-controller="Comments" asp-action="GetById" asp-route-id="@comment.PostId"></a></h4>
                    <div class="p-2"><img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583336/AAA/4.jpg" alt="user" width="50" class="rounded-circle"></div>
                    <div class="comment-text w-100">
                        <h6 class="font-medium">@comment.UserUserName</h6>
                        <span class="m-b-15 d-block">@comment.Content</span>
                        <div class="comment-footer">
                            <span class="text-muted float-right">@comment.CreatedOn</span>
                            <button type="button" class="btn btn-cyan btn-sm">Edit</button>
                            <button type="button" class="btn btn-success btn-sm">Publish</button>
                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<hr />
<div>
    <a asp-controller="Comments" asp-action="CreateComment" type="button" class="btn btn-primary" />Add a comment<a />
</div>