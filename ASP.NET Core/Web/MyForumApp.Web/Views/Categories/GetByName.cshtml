@model MyForumApp.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<h1 class="display-3">@Model.Title</h1>
<div class="alert alert-info">
    @Model.Description
</div>

@*<button type="button" class="btn btn-primary" name="createPost">Add a new post in this category</button>*@
@*<button type="button" value="Go" class="btn btn-default" href="/Posts/CreatePost">Add a new post in this category</button>*@
@*<a asp-controller="Posts" asp-action="Create" method="get">
    <button type="button" class="btn btn-primary">Add a new post in this category</button>
</a>*@

@foreach (var post in Model.Posts)
{
<div class="media-body">
    <h4 class="media-heading"><a asp-controller="Posts" asp-action="ById" asp-route-id="@post.Id">@post.Title</a></h4>
    <p>@post.ShortContent</p>
    <ul class="list-inline list-unstyled text-right">
        <li class="list-inline-item">
            <i class="fas fa-user"></i> @post.UserUserName
        </li>
        <li class="list-inline-item">
            <i class="far fa-calendar-alt"></i> @post.CreatedOn
        </li>
        <li class="list-inline-item">
            <i class="fas fa-comment-dots"></i> @post.CommentsCount comments
        </li>
    </ul>
</div>
}
