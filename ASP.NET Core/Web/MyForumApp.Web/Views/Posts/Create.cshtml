@model MyForumApp.Web.ViewModels.Posts.CreatePostViewModel
@{
    this.ViewData["Title"] = "CreatePost";
}

<div class="form-group">
    <div class="text-black-50 label-holder d-flex justify-content-center">
        <label for="name" class="h4 mb-2">Title</label>
    </div>
    <input type="text" class="form-control" id="title" name="title" />
</div>
<div class="form-group">
    <div class="text-black-50 label-holder d-flex justify-content-center">
        <label for="description" class="h4 mb-2">Description</label>
    </div>
    <input type="text" class="form-control" id="description" name="description" />
</div>

<form asp-controller="Posts" asp-action="CreatePost" method="post">
    <button type="submit" class="btn btn-primary">Add</button>
</form>
